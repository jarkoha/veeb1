<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Jarl Koha, veebiproge 2023</title>
</head>
<body>
	<img src="/banner/banner.png" alt="Veebiprogrammeerimise kursuse bänner">
	<h1>Eesti film</h1>
	<hr>
	<ul>
		<li><a href="/eestifilm">Eesti film</a></li>
		<li><a href="/">Avalehele</a></li>
	</ul>
	<hr>
	<h2>Filmi info</h2>
	<form method="GET">
		<label for="filmIdInput">Vali millise fimi kohta infot soovid: </lable>
		<input type="number" name="filmIdInput" id="filmIdInput" min="1" max="<%= maxSql %>" value="0">
		<input type="submit" name="filmIdSubmit" value="Otsi">
	</form>
	<br>
	<% if (film && film.length > 0) { %>
		<% film.forEach(function(movie) { %>
		  <h3>Pealkiri</h3>
		  <p><%= movie.title %></p>
		  <h3>Valmimisaasta</h3>
		  <p><%= movie.production_year %></p>
		  <h3>Kestvus</h3>
		  <p><%= movie.duration %></p>
		  <h3>Kirjeldus</h3>
		  <p><%= movie.description %></p>
		<% }); %>
	  <% } else { %>
		<p>Tee oma valik ja näed andmeid siin.</p>
	  <% } %>
</body>
</html>